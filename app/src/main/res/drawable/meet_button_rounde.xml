<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="15dip" />
            <!--邊框-->
            <stroke android:color="#ffffff" android:width="10dp" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#E399D2" android:endColor="#E47BCC"  />
        </shape>
    </item>

    <!-- 預設時 -->
    <item android:color="@android:color/black">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:color="#ffffff" android:width="5dp" />
            <gradient android:angle="-90" android:startColor="#DA1FAF" android:endColor="#E352C1"  />
        </shape>
    </item>

</selector>