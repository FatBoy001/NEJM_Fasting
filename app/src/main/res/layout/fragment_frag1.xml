            android:layout_height="30sp"
            android:background="@drawable/fasting_completed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="已完成"
            android:padding="5dp"
            android:gravity="center_vertical" />
        <TextView
