<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageEdit.Fragments.BrushFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="brush size"/>
        <SeekBar
            android:id="@+id/seekbar_brush_size"
            android:min="1"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="brush opacity"/>
        <SeekBar
            android:id="@+id/seekbar_brush_opacity"
            android:min="1"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_color"
            android:layout_width="wrap_content"
            android:layout_height="80dp">

        </androidx.recyclerview.widget.RecyclerView>

        <ToggleButton
            android:id="@+id/brush_state"
            android:textOff="Brush"
            android:textOn="Eraser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ToggleButton>
    </LinearLayout>


</RelativeLayout>