<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassEntityActivity">

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/action_image"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:srcCompat="@drawable/cloud" />

    <TextView
        android:id="@+id/tv_action_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="24sp"
        tools:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_action_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_action_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="30sp" />

    <ImageButton

        android:id="@+id/btn_pause"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_action_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_rounde"
        android:src="@drawable/ic_baseline_pause_24" />

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_action_time"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/btn_pause"
        app:srcCompat="@drawable/ic_next"
        tools:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_action_time"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/btn_pause"
        app:srcCompat="@drawable/ic_back" />



</RelativeLayout>