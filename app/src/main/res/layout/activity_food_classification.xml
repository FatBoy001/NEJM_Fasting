<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food.foodClassification">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/show">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="280dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="7dp"
            app:srcCompat="@drawable/chopsticks"
            android:scaleType="fitXY"/>

        <Button
            android:id="@+id/bt_milk"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/milk_button_circle"
            android:text="乳品類"/>



        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="293dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/food_button_rounde"
            android:padding="5dp">


            <Button
                android:id="@+id/bt_fruit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/fruit_button_rounde"
                android:text="水果類" />

            <Button
                android:id="@+id/bt_vegetables"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/bt_fruit"
                android:background="@drawable/vegetables_button_rounde"
                android:text="蔬菜類" />

            <Button
                android:id="@+id/bt_meet"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_toEndOf="@+id/bt_vegetables"
                android:background="@drawable/meet_button_rounde"
                android:text="豆魚蛋肉類" />

            <Button
                android:id="@+id/bt_grain"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/bt_meet"
                android:layout_toEndOf="@+id/bt_vegetables"
                android:background="@drawable/grain_button_rounde"
                android:text="全榖雜糧類" />


            <Button
                android:id="@+id/bt_oil"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="98dp"
                android:background="@drawable/button_circle"
                 />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="191dp"
            android:layout_marginTop="25dp"
            android:text="堅果種子類"/>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="226dp"
            android:layout_marginBottom="163dp"
            android:layout_marginTop="45dp"
            android:background="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:text="本次用餐紀錄:"
            android:textSize="35dp"
            android:textStyle="bold" />
        <ListView
            android:layout_width="373dp"
            android:layout_height="281dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="60dp"
            android:id="@+id/listView"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="49dp"
            android:background="@drawable/button_rounde"
            android:text="完成紀錄" />
    </RelativeLayout>
</RelativeLayout>